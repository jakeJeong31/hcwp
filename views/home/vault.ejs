  <script>
  function validationCheck(){

    if($("#obj_addr").val()==""){
      alert("접속대상 IP를 입력해주세요.");
      $("#obj_addr").focus();
      return false;
    }
    if($("#role_id").val()==""){
      alert("역할 ID를 입력해주세요.");
      $("#role_id").focus();
      return false;
    }
    if($("#secret_id").val()==""){
      alert("시크릿 ID를 입력해주세요.");
      $("#secret_id").focus();
      return false;
    }
    return true;
  }

  function vaultAccess(){

    if(validationCheck()){
      var vaultRequestInfo = "";
      vaultRequestInfo += "접속대상:"+$("#obj_addr").val()+":8200\n";
      vaultRequestInfo += "역할 ID:"+$("#role_id").val()+"\n";
      vaultRequestInfo += "시크릿 ID:"+$("#secret_id").val()+"\n";
      alert("* Vault 접속요청 정보\n"+vaultRequestInfo);
    }
  }

